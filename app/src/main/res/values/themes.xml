<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splash screen theme -->
    <style name="Theme.BC_VAX.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorPrimaryVariant</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.BC_VAX</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.BC_VAX" parent="Theme.MaterialComponents.Light.NoActionBar">


        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <style name="TextHeader" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextName" parent="">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextResult" parent="">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextLabel" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ButtonStyle" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>